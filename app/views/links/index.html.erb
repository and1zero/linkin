<section class="section">
  <div class="container">
    <nav class="level">
      <!-- Left side -->
      <div class="level-left">
        <div class="level-item">
          <p class="subtitle is-5"><strong><%= @links.length %></strong> links</p>
        </div>
      </div>

      <!-- Right side -->
      <div class="level-right">
        <p class="level-item">
          <%= link_to "New", new_link_path, class: "button is-success" %>
        </p>
      </div>
    </nav>
    <% if @links.to_a.any? %>
      <div class="grid">
        <% @links.each do |link| %>
          <div class="cell">
            <div class="card">
              <header class="card-header">
                <p class="card-header-title"><%= link.short_url %></p>
              </header>
              <div class="card-content">
                <%= link.original_url %>
                âž¡
                <%= link.short_url %>

                <p class="has-text-grey-light is-size-7">
                  Created at <%= link.created_at %>
                </p>
              </div>

              <footer class="card-footer">
                <%= link_to 'View', link_path(link), class: 'card-footer-item' %>
                <%= link_to 'Edit', edit_link_path(link), class: 'card-footer-item' %>
                <%= link_to 'Delete', link, data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'card-footer-item' %>
              </footer>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="notification is-info">
        It seems that you don't have any shortened links yet. Good news, you can start creating some.
      </div>
    <% end %>
  </div>
</section>
